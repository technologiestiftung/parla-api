{
	"name": "@technologiestiftung/parla-api",
	"version": "1.19.0",
	"description": "",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"test": "NODE_ENV='test' NODE_OPTIONS='--no-warnings' c8 ava --serial",
		"lint": "ESLINT_USE_FLAT_CONFIG=true eslint \"src/**/*\"",
		"dev": "nodemon",
		"dev:cors": "NODE_ENV=none nodemon",
		"build": "mkdir -p dist && node esbuild.config.cjs",
		"start": "node dist/index.js",
		"create:types": "supabase gen types typescript --local > ./src/lib/database.ts && prettier --write ./src/lib/database.ts"
	},
	"keywords": [],
	"author": "ff6347 <hash@ff6347.email>",
	"license": "MIT",
	"devDependencies": {
		"@ava/typescript": "4.1.0",
		"@saithodev/semantic-release-backmerge": "4.0.1",
		"@technologiestiftung/eslint-config": "0.2.0",
		"@technologiestiftung/eslint-plugin": "0.1.1",
		"@technologiestiftung/semantic-release-config": "1.2.4",
		"@types/common-tags": "1.8.4",
		"@types/node": "20.14.12",
		"ava": "6.1.3",
		"c8": "9.1.0",
		"cz-conventional-changelog": "3.3.0",
		"dotenv": "16.4.5",
		"esbuild": "0.23.0",
		"eslint": "8.57.0",
		"glob": "10.4.5",
		"globals": "15.8.0",
		"msw": "2.3.4",
		"nodemon": "3.1.4",
		"pino-pretty": "10.3.1",
		"prettier": "3.3.3",
		"semantic-release": "23.1.1",
		"supabase": "1.187.3",
		"tsx": "4.16.2",
		"typescript": "5.5.4"
	},
	"prettier": {
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"useTabs": true,
		"printWidth": 80,
		"overrides": [
			{
				"files": [
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false
				}
			}
		]
	},
	"nodemonConfig": {
		"restartable": "rs",
		"verbose": true,
		"execMap": {
			"js": "node --harmony"
		},
		"exec": "tsx ./src/index.ts",
		"watch": [
			"src"
		],
		"env": {
			"NODE_ENV": "development"
		},
		"ext": "ts,json"
	},
	"dependencies": {
		"@fastify/cors": "9.0.1",
		"@fastify/rate-limit": "9.1.0",
		"@supabase/supabase-js": "2.43.4",
		"common-tags": "1.8.2",
		"fastify": "4.27.0",
		"fluent-json-schema": "4.2.1",
		"gpt3-tokenizer": "1.1.5",
		"openai": "4.47.3",
		"react-device-detect": "2.2.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
